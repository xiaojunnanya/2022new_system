/* pages/notice/notice.wxss */
swiper{
  padding: 10rpx 0rpx;
  height: 360rpx;
}
swiper swiper-item{
  display: flex;
  /* 居中 */
  justify-content: center;
}

swiper swiper-item view{
  /* 默认使用图片的高度为原来的0.9 */
  transform: scaleY(0.9);
  /* 设置速度一样 */
  transition: 0.3s linear;
}

swiper swiper-item view image{
  width: 640rpx;
  /* height: 300rpx; */
  height: 360rpx;
  border-radius: 20rpx;
}

.cur{
  transform: scaleY(1);
  transition: 0.3 linear;
}



.red{
  color: red;
}
.black{
  color: black;
}

.notice{
  margin: 0 30rpx;
  padding: 20rpx 30rpx;
  border-radius: 15rpx;
  box-shadow: 0rpx 0rpx 20rpx #E3E5E7;
}
.aboutNotice{
  font-size: 44rpx;
  font-weight: 600;
  letter-spacing: 5rpx;
  padding: 10rpx 0;
}
.null{
  border: 1rpx solid #F0F0F0;
  margin-top: 20rpx;
}
.noticeInfo:active{
  background-color: #F7F7F7;
}
.noticeInfo{
  margin: 10rpx 0;
}